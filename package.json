{
  "name": "codesnap",
  "version": "0.0.1",
  "description": "CodeSnap is a node.js library designed to programmatically generate images of code snippets. It provides a simple and convenient way to create beautiful snapshots of your code for further automated or programmatic usage.\n",
  "main": "lib/CodeSnap.js",
  "types": "lib/CodeSnap.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublish": "tsc",
    "run-example": "ts-node examples/example.ts",
    "test": "jest",
    "lint": "eslint \"src/{**, *.ts}/*.ts\" --fix",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/francosion042/codesnap.git"
  },
  "keywords": [],
  "author": "Anthony Nwobodo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/francosion042/codesnap/issues"
  },
  "homepage": "https://github.com/francosion042/codesnap#readme",
  "dependencies": {
    "puppeteer": "^22.0.0",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "3.2.5",
    "typescript": "^5.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
